<%= link_to 'Back', tickets_path, class: "btn btn-secondary" %>
<h2 class="my-3">Add food to ticket ID: <%= @ticket.id %></h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>

        <td><%= food.name %></td>
        <% # This is a conditional statement that checks if the food type is a beverage or not. %>
        <% if food.food_type == "Beverage"%>
          <td><%= food.quantity %> ml</td>
        <% else %>
          <td><%= food.quantity %> g</td>
        <% end %>
        <td>$<%= food.price %></td>
        <td><%= food.food_type %></td>
        <td>
          <%= form_with(model: @ticket, url: ticket_path(@ticket), local: true, method: :patch) do |f| %>
            <%= f.button "Add", name: "dish", value: food.id, class: "btn btn-success" %>
          <% end %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>
