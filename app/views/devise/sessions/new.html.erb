<div class="login-container">
  <h2 class="mb-4">Inciar Sesión</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: {controller: "md5login"}) do |f| %>
    <span class="input-group-text mb-1" id="inputGroup-sizing-lg">Correo</span>
    <div class="field input-group input-group-lg mb-4">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', id:"email_field" %>
    </div>

    <span class="input-group-text mb-1" id="inputGroup-sizing-lg">Contraseña</span>
    <div class="field input-group input-group-lg mb-4">
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', id:"password_field" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field my-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Iniciar Sesión", id:"login", class: 'btn btn-primary mt-1 mb-3' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
