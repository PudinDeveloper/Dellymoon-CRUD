<h1>Hi, you logged in!</h1>

<main class="my-5">

  <% # Role and email of the current user %>
  <div class="row my-5">
    <div class="col-md-6">
      <h5 class="mt-2 text-wrap-example alert alert-info">User: <%= current_user.email %></h5>
    </div>
    <div class="col-md-6">
      <h5 class="mt-2 text-wrap-example alert alert-info">Your role: <%= current_user.role %></h5>
    </div>
  </div>

  <% # Buttons to navigate to the different sections of the app %>
  <div class="row my-5">
    <div class="col-md-6">
      <div class="row h1">
        <%= link_to 'Orders (Waitstaff)' , tickets_path, class: 'col btn btn-primary m-1 p-3' %>
      </div>
      <div class="row h1">
        <%= link_to 'Kitchen (Chef)' , order_foods_path, class: 'col btn btn-primary m-1 p-3' %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="row h1">
        <%= link_to 'Dishes (Chef)' , foods_path, class: 'col btn btn-primary m-1 p-3' %>
      </div>
      <div class="row mb-5 h1">
        <%= link_to 'Employees (Admin)' , admin_users_path, class: 'col btn btn-primary m-1 p-3' %>
      </div>
    </div>
  </div>

</main>

